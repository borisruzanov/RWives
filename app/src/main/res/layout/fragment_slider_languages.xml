<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.ui.slider.SliderLanguagesFragment">

    <TextView
        android:id="@+id/fragment_slider_languages_tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp40"
        android:text="@string/choose_languages_you_can_talk"
        android:textSize="24sp"
        android:textColor="@color/darkGrey"/>

        <TextView
            android:id="@+id/fragment_slider_languages_tv_number"
            style="@style/FlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/fragment_slider_languages_tv_question"
            android:text="@string/slider_language_text"
            android:textColor="@color/darkGrey"
            android:textSize="@dimen/huge_text_size" />

    <Button
        android:id="@+id/fragment_slider_languages_btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_slider_languages_tv_number"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp12"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/add"
        android:textColor="@android:color/white" />


</RelativeLayout>