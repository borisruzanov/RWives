<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <TextView
        android:id="@+id/timer_title"
        style="@style/AppTheme.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/dp8"
        android:text="@string/day_limit_is_over"
        />

    <TextView
        android:id="@+id/timer_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/limit_message"
        android:textColor="@android:color/black"
        android:textSize="12sp" />
    <TextView
        android:id="@+id/timer_time_to_wait"
        android:layout_marginTop="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/time_to_wait"
        android:textColor="@android:color/black"
        android:textSize="12sp" />

    <RelativeLayout
        android:id="@+id/timer_counter_container"
        android:layout_marginTop="@dimen/dp8"
        android:layout_marginBottom="@dimen/dp8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/timer_counter_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/dp4"
            android:text="1"/>
        <TextView
            android:id="@+id/timer_counter_hours_label"
            android:layout_toRightOf="@+id/timer_counter_hours"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="hours"/>
        <TextView
            android:id="@+id/timer_counter_minutes"
            android:layout_toRightOf="@+id/timer_counter_hours_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_margin="@dimen/dp4"
            android:text="45"/>
        <TextView
            android:id="@+id/timer_counter_minutes_label"
            android:layout_toRightOf="@+id/timer_counter_minutes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="minutes"/>

    </RelativeLayout>

    <Button
        android:id="@+id/add_photo_btn_mi"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/dp4"
        android:text="@string/subscription" />

</LinearLayout>