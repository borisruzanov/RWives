<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".mvp.ui.slider.SliderHeightFragment">

    <TextView
        android:id="@+id/fragment_slider_height_tv_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp40"
        android:text="@string/what_is_your_height"
        android:textSize="@dimen/large_text_size"
        android:textColor="@color/darkGrey"/>

    <LinearLayout
        android:id="@+id/fragment_slider_height_linear_tvs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp16"
        android:layout_below="@id/fragment_slider_height_tv_question"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/fragment_slider_height_tv_number"
            style="@style/FlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/height_number_text"
            android:textColor="@color/darkGrey"
            android:textSize="@dimen/huge_text_size" />

        <TextView
            android:id="@+id/fragment_slider_height_tv_cm"
            style="@style/FlatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/height_cm_text"
            android:textColor="@color/darkGrey"
            android:textSize="@dimen/huge_text_size" />


    </LinearLayout>

    <Button
        android:id="@+id/fragment_slider_height_btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragment_slider_height_linear_tvs"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/dp12"
        android:backgroundTint="@color/colorAccent"
        android:text="@string/edit"
        android:textColor="@android:color/white" />


</RelativeLayout>
