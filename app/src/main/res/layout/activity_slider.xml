<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".mvp.ui.slider.SliderActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/slider_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_slider"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp55"
        android:background="@color/colorPrimary"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:layout_margin="2dp">

           <TextView
               android:id="@+id/slider_title"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:textSize="@dimen/sp14"
               android:text="title"
               android:textStyle="bold"
               android:textAlignment="viewStart"
               android:textColor="@color/darkColor"
               android:layout_centerVertical="true"
               android:padding="1dp" />
           <LinearLayout
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:layout_alignParentEnd="true"
               android:orientation="horizontal">
               <TextView
                   android:id="@+id/slider_step_left_text"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Step Left"
                   android:textSize="@dimen/sp12"
                   android:padding="@dimen/dp4"
                   android:textColor="@color/darkColor"
                   android:layout_gravity="center_vertical"/>
               <FrameLayout
                   android:layout_width="50dp"
                   android:layout_height="50dp">
               <ProgressBar
                   android:id="@+id/slider_progressbar"
                   android:layout_width="45dp"
                   android:layout_height="45dp"
                   android:progress="55"
                   android:scaleX="-1"
                   style="?android:progressBarStyleHorizontal"
                   android:progressDrawable="@drawable/sliderprogresspdrawable"/>
                <TextView
                    android:id="@+id/slider_progressleft_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp12"
                    android:text="12"
                    android:layout_marginBottom="1dp"
                    android:layout_marginEnd="1dp"
                    android:layout_gravity="center"
                    android:textColor="@color/darkColor"
                    android:textStyle="bold" />
               </FrameLayout>
           </LinearLayout>
       </RelativeLayout>

    </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/view_pager_add_info"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/slider_linear"
        app:layout_constraintTop_toBottomOf="@+id/slider_appbar"/>

    <LinearLayout
        android:id="@+id/slider_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:orientation="horizontal"
        android:weightSum="2"
        android:visibility="visible">

    <Button
        android:id="@+id/slider_back_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/button_back_text"
        android:visibility="gone"
        android:backgroundTint="@color/grey_600"
        android:textColor="@android:color/white"
        android:layout_weight="1"
        android:layout_margin="@dimen/dp6"
        />

    <Button
        android:id="@+id/slider_next_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkColor"
        android:text="@string/next_text"
        android:textColor="@android:color/white"
        android:visibility="visible"
        android:layout_weight="1"
        android:layout_margin="@dimen/dp6"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>
